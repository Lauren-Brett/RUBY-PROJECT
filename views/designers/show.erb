<h1><style="font-family: monospace"><%= @designer.name%></h1>
<div class="designer-page">
  <h5><strong>Location: <%= @designer.location%></strong></h5>


<h2>Current Products</h2>
<ul>
  <% @products.each do |product|%>
  <li>
    <%= product.name %>
  </li>
  <% end %>
</ul>

<a href="/designers/<%= @designer.id %>/edit">Edit Designer Info</a>
<br>

<form action="/designers/<%= @designer.id %>/delete" method="POST">
  <br>
  <input type="submit" value="Delete Designer">
</form>


</div>
